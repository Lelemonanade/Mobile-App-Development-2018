<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundblurry"
    android:maxWidth="450dp"
    android:minWidth="360dp"
    tools:context=".communityscreen">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/user1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/user1feed"
                app:srcCompat="@drawable/user1" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/buttonComment"
                android:layout_gravity="end|bottom"
                android:layout_marginTop="23dp"
                android:tint="@android:color/background_light"
                app:backgroundTint="@color/colorPrimary"
                app:fabSize="normal"
                app:rippleColor="@android:color/holo_blue_bright"
                app:srcCompat="@color/colorPrimary" />

            <TextView
                android:id="@+id/user1name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/user1"
                android:layout_toRightOf="@+id/user1"
                android:text="@string/user1feed"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/timeago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user1name"
                android:layout_toEndOf="@+id/user1"
                android:layout_toRightOf="@+id/user1"
                android:text="@string/posttime" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/timeago"
                android:contentDescription="@string/imagi1"
                app:srcCompat="@drawable/imagi1" />

            <TextView
                android:id="@+id/postdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView6"
                android:text="My first imagelabs project" />

            <Button
                android:id="@+id/buttonLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postdescription"
                android:text="Like" />

            <Button
                android:id="@+id/buttonComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postdescription"
                android:layout_toRightOf="@+id/buttonLike"
                android:text="Comment" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>